{
  "manifest_version": 2,
  "name": "Text Reader Extension",
  "version": "1.0",
  "description": "Reads and displays the text of the current tab",
  "permissions": ["activeTab"],
  "browser_action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}

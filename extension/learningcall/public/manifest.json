{
  "manifest_version": 3,
  "name": "Voice Chat Bot Quiz Generator",
  "version": "1.0",
  "description": "Generates quizzes from the current tab content using GPT API",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {}
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
